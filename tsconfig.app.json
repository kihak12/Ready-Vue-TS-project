{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": ["src/**/*.ts", "src/**/*.vue", "vue-shims.d.ts"],
  "vueCompilerOptions": {
    "skipTemplateCodeGen": true,
  },
  "compilerOptions": {
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "composite": true,
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  }
}
